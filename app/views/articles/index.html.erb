<center><table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article, class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', article, method: :delete, data: 
      { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
    </tr>
  <% end %>
</table></center>